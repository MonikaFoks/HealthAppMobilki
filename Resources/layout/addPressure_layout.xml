<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bcg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="408.4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="11.8dp">

        <EditText
            android:textAlignment="center"
            android:textSize="200px"
            android:layout_marginTop="200px"
            android:layout_marginLeft="300px"
            android:inputType="number"
            android:layout_width="500px"
            android:layout_height="300px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txt_addPressure1" />
        <TextView
            android:text="Skurczowe:"
            android:textSize="100px"
            android:layout_marginTop="80px"
            android:layout_marginLeft="35px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Pressure1" />

        <EditText
            android:textAlignment="center"
            android:textSize="200px"
            android:layout_marginTop="700px"
            android:layout_marginLeft="300px"
            android:inputType="number"
            android:layout_width="500px"
            android:layout_height="300px"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txt_addPressure2" />
        <TextView
            android:text="Rozkurczowe:"
            android:textSize="100px"
            android:layout_marginTop="580px"
            android:layout_marginLeft="35px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Pressure2"
            android:enabled="true" />

    </RelativeLayout>

    <Button
        android:text="ZAPISZ"
        android:textSize="150px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_savePressure" />

    <Button
        
        android:text="ANULUJ"
        android:textSize="150px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancelPressure" />
</LinearLayout>
